<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/material_dynamic_primary99">

    <!-- Title Wrapped in a Box (CardView) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/material_dynamic_primary0">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to the App"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
        android:padding="16dp"/>

    </androidx.cardview.widget.CardView>

    <!-- Optional Featured Image or Banner -->
    <!-- <ImageView
        android:id="@+id/iv_featured"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/featured_image"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/> -->

    <!-- RecyclerView for Item List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHomeItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
    android:layout_marginTop="8dp"
    android:layout_weight="1"/>

</LinearLayout>
